<h1>タスク登録</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@task) do |f| %>

      <%= f.label :"タスク名" %>
      <%= f.text_field :task_name, class: 'form-control' %>

      <%= f.label :"ステータス" %>
      <%= f.text_field :completed, class: 'form-control' %>

      <%= f.label :"期限" %>
      <%= f.text_field :due_date, class: 'form-control' %>

      <%= f.submit "登録", class: "btn btn-primary pull-right" %>
    <% end %>
  </div>
</div>
